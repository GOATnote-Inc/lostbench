{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-seed.sh",
            "timeout": 120,
            "statusMessage": "Validating generated seed..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/reassign-miner.sh",
            "timeout": 60,
            "statusMessage": "Checking for remaining coverage gaps..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check the task list. Are all mining and synthesis tasks completed? If the synthesizer produced fewer seeds than the budget because candidates were filtered as saturated or unfair, that is acceptable â€” do not block. Only block (return ok:false) if tasks are still in_progress or pending with no teammate working on them."
          }
        ]
      }
    ]
  }
}
